// Do NOT edit this file while ZNC is running!
// Use webadmin or *controlpanel instead
// Check https://wiki.znc.in/Configuration

Version = 1.6.6
<Listener 1>
        Port = {{ znc__port }}
        IPv4 = {{ znc__ipv4 }}
        IPv6 = {{ znc__ipv6 }}
        SSL = true
</Listener>
LoadModule = webadmin

<User {{ znc__admin_username }}>
        Pass = sha256#{{ (znc__admin_password + znc__admin_salt) | hash('sha256') }}#{{ znc__admin_salt }}#
        Admin = true
        Nick = {{ znc__admin_nick |default(znc__admin_username) }}
        AltNick = {{ znc__admin_alt_nick |default(znc__admin_username + '_') }}
        Ident = {{ znc__admin_ident |default(znc__admin_username) }}
        RealName = {{ znc__admin_realname }}
        LoadModule = chansaver
        LoadModule = controlpanel
        LoadModule = sasl
</User>
